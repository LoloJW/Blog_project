{% extends 'themes/base-visitor.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <h1>Resettez le mdp</h1>

    {{ form_start(resetForm) }}
    <div class="mb-3">
            <label for="">Mot de passe</label>
            {{ form_widget(resetForm.plainPassword.first, {'attr': {'class':'form-control','autofocus':'auto'}}) }}
            <button class="btn btn-primary">Reset password</button>
    </div>
    <div class="mb-3">
            <label for="">Confirmez</label>
            {{ form_widget(resetForm.plainPassword.first, {'attr': {'class':'form-control'}}) }}
    </div>
    <div>
            <button class="btn btn-primary">Reset password</button>
    </div>
    {{ form_end(resetForm) }}
{% endblock %}
