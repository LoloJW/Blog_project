{# {% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %} #}

{# {% block body %} #}

<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Connexion | Médecine du Monde - Blog santé du Dr Jean Dupont</title>

        {# Seo #}
        <meta name="robots" content="index, follow">
        <meta name="description" content="Connectez-vous au blog Médecine du Monde pour accéder à des contenus santé fiables, suivre les nouveaux articles médicaux et participer aux échanges autour de la prévention et du bien-être.">
        <meta name="keywords" content="Connexion blog santé, compte utilisateur santé, blog médical Connexion, médecine du monde Connexion">
        <meta name="author" content="Dwwm22">
        <meta name="publisher" content="Dwwm22">

        {# Webpack Encore #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

        {# Favicon #}
        <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96">
        <link rel="icon" type="image/svg+xml" href="/favicon.svg">
        <link rel="shortcut icon" href="/favicon.ico">
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
        <link rel="manifest" href="/site.webmanifest">

        {# Google Font #}
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Pacifico&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">        
    </head>
<body class="jd-auth-bg">
<main class="container">
    <div class="row">
         <div class="col-lg-6">
            <img class="img-fluid" src="/images/static/Cook.png" alt="C'est incroyable">
        </div>
        <div class="col-lg-6 d-flex flex column justify-content-center align-items-center">
            <div class="w-100">
                <form method="post" class="">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                   {% for message in app.flashes('success') %}
                                <div class="alert alert-success text-center" role="alert">
                                    {{ message }}
                                </div>
                            {% endfor %}
                    <h1 class="h3 mb-3 font-weight-normal text-center">Connexion</h1>

                    <div>
                        <label for="inputEmail">EMAIL</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    </div>
                    <div>
                        <label for="inputPassword">MDP</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                        <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>
                                <input type="checkbox" name="_remember_me"> Tu veux qu'on se souvienne de toi bichette ?
                            </label>
                        </div>
                        <div class="col-md-6 text-end">
                            <a href="{{path('app_forgot_password_request')}}" class="text-danger">Tu as oublié ton mdp ? Comme c'est dommage, skill issue</a>
                        </div>
                    </div>

                    <div class="checkbox mb-3">
                    </div>

                    <button formnovalidate class="btn btn-lg btn-primary shadow w-100" type="submit">
                       CONNECTE-TOI !!!
                    </button>
                       <div class="d-flex flex-column justify-content-center align-items-center my-4">
                            <p>Pas encore inscrit ? Tu fous quoi vient<a href="{{path('app_register')}}" class="text-danger"> ICI !!!</a></p>
                            <p><a href="{{path('app_visitor_welcome')}}" class="text-danger">Les losers à l'accueil</a></p>
                </form>
            </div>
        </div>
   
    </div>
</main>    
</body>
</html>

{# {% endblock %} #}
