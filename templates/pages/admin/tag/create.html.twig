{% extends "themes/base_admin.html.twig" %}

{% block title %}Add tag{% endblock %}

{% block description %}Ajouter un nouveau tag{% endblock %}

{% block keywords %}Ajouter,nouveau,tag{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Ajouter un tag</h1>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 mx-auto">
                {{ form_start(tagForm) }}
                    <div class="mb-3">
                        <label for="tag_form_name">Nom: </label>
                        {{form_widget(tagForm.name, {'attr': {'class':'form-control', 'autofocus':'autofocus'}})}}
                    </div>
                    <div class="text-warning">
                        {{form_errors(tagForm.name)}}
                    </div>
                    <div>
                        <input formnovalidate type="submit" class="btn btn-primary shadow" value="Ajouter">
                    </div>
                {{ form_end(tagForm) }}
            </div>
        </div>
    </div>
{% endblock %}